extends ../layout.jade
block contenido
    div(class="col-md-5 center-block quitar-float top-space text-left")
        h1 Agregar Producto
        form(method="post" action="/productos" style="margin-top:1.5em;")
            div(class="form-group")
                label Nombre
                input(type="text" name="title" placeholder="Nombre del producto" class="form-control")
            div(class="form-group")
                label Descripcion
                textarea(name="description" placeholder="Descripcion del producto" class="form-control")
            div(class="form-group")
                label Costo
                input(type="number" name="pricing" placeholder="Costo" class="form-control")
            div(class="form-group")
                label Contraseña
                input(type="password" name="password" placeholder="Contraseña" class="form-control")
            div(class="form-group text-right")
                input(type="submit" class="btn btn-info" value="Guardar")